---
title: browserstats.love
---

<section class="top-bar">
    <h2 class="site-title">❤️    browserstats.love</h2>
    <h2 class="site-updated">Last Updated <%= browser_data["last_update"] %></h2>
</section>

<section class="card-section">

  <div class="card browser-stats">
      <table>
          <th class="card-header" colspan="3">BROWSER</th>

          <!--start running the ruby  -->
          <% browser_data["Web Browser"].each do |browser, pct| %>
              <tr>
                  <td class="percent-column"><%= pct %>%</td>
                  <td class="icon-column"><img src="assets/<%= get_asset(browser) %>" alt="Chrome"></td>
                  <td class="browser-column"><%= browser.upcase %></td>
              </tr>
          <% end %>
          <!--end running the ruby  -->

      </table>
  </div>


  <div class="card resolution-card">
      <table>
          <th class="card-header" colspan="3">RESOLUTION</th>

          <!--running the ruby  -->
          <% browser_data["Screen Resolution"].each do |resolution, pct| %>
              <tr>
                  <td class="percent-column"><%= pct %>%</td>
                  <td class="browser-column">
                      <%= resolution.upcase %>
                  </td>
              </tr>
          <% end %>
          <!--end running the ruby  -->

      </table>
  </div>

</section>


<section class="credits">

  <div class="heart-circle">
    <div class="heart">❤️</div>
  </div>

  <h2>
      Info from
    <%=link_to browser_data["data_source"]["name"], browser_data["data_source"]["url"] %>
  </h2>

  <h2>
    Made with ♥ by
    <%= "#{link_to "Toby", "http://design.tobysilverman.com"}, #{ link_to "Ben", "http://benpepin.com" }," %>
    and
    <%= link_to "Aaron", "http://aaronstrick.com" %>
  </h2>
</section>
