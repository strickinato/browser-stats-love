<section class="top-bar">
  <h2 class="site-title"><span id="title-emoji">‚ù§Ô∏è</span>    browserstats.love</h2>
  <h2 class="site-updated">Last Updated <%= browser_data["last_update"] %></h2>
</section>

<div class="parallax">

  <section class="card-section">

    <form class="form">
        <div class="switch-field">
          <input type="radio" id="switch_left" name="switch_2" value="yes" checked/>
          <label for="switch_left">üá∫üá∏</label>
          <input type="radio" id="switch_right" name="switch_2" value="no" />
          <label for="switch_right">üåè</label>
        </div>
    </form>

   <div id="flip-button"> flip</div>

    <div class="flip-container" id="browser-card" ontouchstart="this.classList.toggle('hover');">
      <div class="flipper">
        <div class="front">

          <!-- front content -->

          <div class="card browser-stats" >

            <table>
              <th class="card-header" colspan="3">BROWSER</th>

              <!--start running the ruby  -->
              <% browser_data["Web Browser"].each do |browser, pct| %>
              <tr>
                <td class="browser-card-percent-column"><%= pct %>%</td>
                <td class="browser-card-icon-column"><img src="assets/<%= get_asset(browser) %>" alt="Chrome"></td>
                <td class="browser-card-browser-column"><%= browser.upcase %></td>
              </tr>
              <% end %>
              <!--end running the ruby  -->
            </table>

          </div>
        </div>

        <div class="back">
          <!-- back content -->
          <div class="card browser-stats">
            <table>
              <th class="card-header" colspan="3">BROWSER</th>

              <!--start running the ruby  -->
              <% browser_data["Web Browser"].each do |browser, pct| %>
              <tr>
                <td class="browser-card-percent-column"><%= pct %>%</td>
                <td class="browser-card-icon-column"><img src="assets/<%= get_asset(browser) %>" alt="Chrome"></td>
                <td class="browser-card-browser-column"><%= browser.upcase %></td>
              </tr>
              <% end %>
              <!--end running the ruby  -->
            </table>

          </div>
        </div>

      </div>
    </div>


    <div class="flip-container" id="resolution-card" ontouchstart="this.classList.toggle('hover');">
      <div class="flipperplus">
        <div class="front">

          <!-- front content -->

          <div class="card resolution-card">
            <table>
              <th class="card-header" colspan="3">RESOLUTION</th>

              <!--running the ruby  -->
              <% browser_data["Screen Resolution"].each do |resolution, pct| %>
              <tr>
                <td class="percent-column resolution-card-percent-column"><%= pct %>%</td>
                <td class="browser-column resolution-card-browser-column">
                  <%= resolution.upcase %>
                </td>
              </tr>
              <% end %>
              <!--end running the ruby  -->

            </table>
          </div>
        </div>
        <div class="back">
          <!-- back content -->
          <div class="card resolution-card">
            <table>
              <th class="card-header">RESOLUTION</th>
              <tr>
                <td class="browser-text">
                  <p>The trends show that screens are getting bigger for people that browse on desktops.</p>
                  <br>These statistics may not be relevant to your web site as different sites attract different audiences. Some web sites attract developers using professional hardware, while other sites attract hobbyists using older computers.</br>
                </td>
              </tr>
            </table>
          </div>
        </div>

      </div>
    </div>

  </section>


