<section class="top-bar">
  <h2 class="site-title"><span id="title-emoji">‚ù§Ô∏è</span>    browserstats.love</h2>
  <h2 class="site-description">Simple stats on how people surf the web</h2>
  <h2 class="site-updated">Last Updated <%= browser_data["last_update"] %></h2>
</section>



  <div class="card-section">

    <div class="switch-field">
        <input type="radio" id="select-usa" name="switch_2" value="yes" checked/>
        <label for="select-usa">üá∫üá∏</label>
        <input type="radio" id="select-world" name="switch_2" value="no" />
        <label for="select-world">üåè</label>
    </div>


    <div class="flip-container" id="browser-card" ontouchstart="this.classList.toggle('hover');">
      <div class="flipper">
        <div class="front">

          <!-- front content -->

          <div class="card browser-stats" >

            <table>
              <th class="card-header" colspan="3">DESKTOP</th>

              <!--start running the ruby  -->
              <% browser_data["desktop-usa"].each do |browser, pct| %>
              <tr>
                <td class="browser-card-percent-column"><%= pct %>%</td>
                <td class="browser-card-icon-column"><img src="assets/<%= get_asset(browser) %>" alt="Chrome"></td>
                <td class="browser-card-browser-column"><%= browser.upcase %></td>
              </tr>
              <% end %>
              <!--end running the ruby  -->
            </table>

          </div>
        </div>

        <div class="back">
          <!-- back content -->
          <div class="card browser-stats">
            <table>
              <th class="card-header" colspan="3">DESKTOP</th>

              <!--start running the ruby  -->
              <% browser_data["desktop-world"].each do |browser, pct| %>
              <tr>
                <td class="browser-card-percent-column"><%= pct %>%</td>
                <td class="browser-card-icon-column"><img src="assets/<%= get_asset(browser) %>" alt="Chrome"></td>
                <td class="browser-card-browser-column"><%= browser.upcase %></td>
              </tr>
              <% end %>
              <!--end running the ruby  -->
            </table>

          </div>
        </div>

      </div>
    </div>


    <div class="flip-container" id="resolution-card" ontouchstart="this.classList.toggle('hover');">
      <div class="flipperplus">
        <div class="front">

          <!-- front content -->

          <div class="card resolution-card">

            <table>
              <th class="card-header" colspan="3">MOBILE</th>

              <!--start running the ruby  -->
              <% browser_data["mobile-usa"].each do |browser, pct| %>
              <tr>
                <td class="browser-card-percent-column"><%= pct %>%</td>
                <td class="browser-card-icon-column"><img src="assets/<%= get_asset(browser) %>" alt="Chrome"></td>
                <td class="browser-card-browser-column"><%= browser.upcase %></td>
              </tr>
              <% end %>
              <!--end running the ruby  -->
            </table>

          </div>
        </div>
        <div class="back">
          <!-- back content -->
          <div class="card resolution-card">

            <table>
              <th class="card-header" colspan="3">MOBILE</th>

              <!--start running the ruby  -->
              <% browser_data["mobile-world"].each do |browser, pct| %>
              <tr>
                <td class="browser-card-percent-column"><%= pct %>%</td>
                <td class="browser-card-icon-column"><img src="assets/<%= get_asset(browser) %>" alt="Chrome"></td>
                <td class="browser-card-browser-column"><%= browser.upcase %></td>
              </tr>
              <% end %>
              <!--end running the ruby  -->
            </table>

          </div>
        </div>

      </div>
    </div>

  </div>


